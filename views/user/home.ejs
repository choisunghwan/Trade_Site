<style>
    #categories{
        padding-bottom: 50px;
    }
    #recentTitle{
        margin-bottom: 25px;
    }
</style>
<body>
    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hero__item set-bg" data-setbg="../../img/hero/banner.jpg">
                        <div class="hero__text">
                            <span>FRUIT FRESH</span>
                            <h2>Vegetable <br />100% Organic</h2>
                            <p>Free Pickup and Delivery Available</p>
                            <a href="product" class="primary-btn">판매상품 둘러보기</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Categories Section Begin -->
    <section class="categories" id="categories">
        <div class="container">
            <div class="row">
                <h2 id="recentTitle">최신 등록 상품 TOP 5</h2>
                <div class="categories__slider owl-carousel">
                        <% for (i=0; i < results.length; i++){ %>
                    <div class="col-lg-3">
                        <div class="categories__item set-bg">
                            <img src="../../<%=results[i].PRODUCT_IMG%>" width="100%">
                            <h5><a href="#"><%=results[i].PRODUCT_NAME%></a></h5>
                        </div>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->

</body>